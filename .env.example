# 环境配置模板文件
# 复制此文件为 .env 并填写实际值

# 环境设置
ENVIRONMENT=development
DEBUG=true
SERVICE_NAME=robot_chess

# 数据库配置
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=10
REDIS_TIMEOUT=5.0

MONGO_URL=mongodb://localhost:27017
MONGO_DATABASE=robot_chess
MONGO_USERNAME=chess_admin
MONGO_PASSWORD=your_mongo_password_here

# 硬件设备配置
CAMERA_RGB_ID=0
CAMERA_DEPTH_ID=1
CAMERA_RGB_WIDTH=1920
CAMERA_RGB_HEIGHT=1080
CAMERA_DEPTH_WIDTH=640
CAMERA_DEPTH_HEIGHT=480
CAMERA_FPS=30
CAMERA_CALIBRATION_FILE=calibration/camera_params.json

ROBOT_PORT=/dev/ttyUSB0
ROBOT_BAUDRATE=115200
ROBOT_TIMEOUT=2.0
ROBOT_DEFAULT_SPEED=50
ROBOT_SAFE_HEIGHT=50.0
ROBOT_CALIBRATION_FILE=calibration/robot_params.json

# AI引擎配置
STOCKFISH_PATH=stockfish
AI_DEFAULT_DIFFICULTY=3
AI_MAX_THINKING_TIME=10.0
AI_HASH_SIZE=128
AI_THREADS=2

# Web服务配置
WEB_HOST=0.0.0.0
WEB_PORT=8080
CORS_ORIGINS=["http://localhost:3000"]
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_EXPIRE_MINUTES=30

# 日志配置
LOG_LEVEL=INFO
LOG_DIR=/home/jetson/prog/logs
LOG_MAX_SIZE=100
LOG_BACKUP_COUNT=5

# 监控配置
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_UPDATE_INTERVAL=5.0
HEALTH_CHECK_INTERVAL=30.0

# 安全配置
ENCRYPTION_KEY=your_encryption_key_here_min_32_chars
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_DURATION=300
API_RATE_LIMIT=100