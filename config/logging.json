{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "json": {
      "()": "shared.logging.config.ChessRobotFormatter",
      "format": "%(timestamp)s %(level)s %(name)s %(message)s"
    },
    "console": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "console",
      "stream": "ext://sys.stdout"
    },
    "file_web_gateway": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "INFO",
      "formatter": "json",
      "filename": "/home/jetson/prog/logs/web_gateway.log",
      "maxBytes": 10485760,
      "backupCount": 5,
      "encoding": "utf8"
    },
    "file_vision_service": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "INFO",
      "formatter": "json",
      "filename": "/home/jetson/prog/logs/vision_service.log",
      "maxBytes": 10485760,
      "backupCount": 5,
      "encoding": "utf8"
    },
    "file_robot_service": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "INFO",
      "formatter": "json",
      "filename": "/home/jetson/prog/logs/robot_service.log",
      "maxBytes": 10485760,
      "backupCount": 5,
      "encoding": "utf8"
    },
    "file_ai_service": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "INFO",
      "formatter": "json",
      "filename": "/home/jetson/prog/logs/ai_service.log",
      "maxBytes": 10485760,
      "backupCount": 5,
      "encoding": "utf8"
    },
    "file_game_manager": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "INFO",
      "formatter": "json",
      "filename": "/home/jetson/prog/logs/game_manager.log",
      "maxBytes": 10485760,
      "backupCount": 5,
      "encoding": "utf8"
    },
    "file_calibration": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "INFO",
      "formatter": "json",
      "filename": "/home/jetson/prog/logs/calibration_service.log",
      "maxBytes": 10485760,
      "backupCount": 5,
      "encoding": "utf8"
    },
    "error_file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "ERROR",
      "formatter": "json",
      "filename": "/home/jetson/prog/logs/errors.log",
      "maxBytes": 10485760,
      "backupCount": 10,
      "encoding": "utf8"
    }
  },
  "loggers": {
    "web_gateway": {
      "level": "INFO",
      "handlers": ["console", "file_web_gateway", "error_file"],
      "propagate": false
    },
    "vision_service": {
      "level": "INFO",
      "handlers": ["console", "file_vision_service", "error_file"],
      "propagate": false
    },
    "robot_service": {
      "level": "INFO",
      "handlers": ["console", "file_robot_service", "error_file"],
      "propagate": false
    },
    "ai_service": {
      "level": "INFO",
      "handlers": ["console", "file_ai_service", "error_file"],
      "propagate": false
    },
    "game_manager": {
      "level": "INFO",
      "handlers": ["console", "file_game_manager", "error_file"],
      "propagate": false
    },
    "calibration_service": {
      "level": "INFO",
      "handlers": ["console", "file_calibration", "error_file"],
      "propagate": false
    },
    "fastapi_middleware": {
      "level": "INFO",
      "handlers": ["console", "file_web_gateway"],
      "propagate": false
    },
    "redis_middleware": {
      "level": "DEBUG",
      "handlers": ["console"],
      "propagate": false
    },
    "async_redis_middleware": {
      "level": "DEBUG",
      "handlers": ["console"],
      "propagate": false
    },
    "urllib3": {
      "level": "WARNING",
      "handlers": ["console"],
      "propagate": false
    },
    "requests": {
      "level": "WARNING",
      "handlers": ["console"],
      "propagate": false
    },
    "redis": {
      "level": "INFO",
      "handlers": ["console"],
      "propagate": false
    },
    "fastapi": {
      "level": "INFO",
      "handlers": ["console"],
      "propagate": false
    },
    "uvicorn": {
      "level": "INFO",
      "handlers": ["console"],
      "propagate": false
    },
    "uvicorn.access": {
      "level": "WARNING",
      "handlers": ["console"],
      "propagate": false
    }
  },
  "root": {
    "level": "INFO",
    "handlers": ["console", "error_file"]
  }
}